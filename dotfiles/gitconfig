[alias]
    ksdiff = difftool -y -t Kaleidoscope
[branch]
    autosetuprebase = always
[branch "master"]
    rebase = true
[color]
    diff = true
    ui = true
    status = true
    branch = true
[diff]
    tool = Kaleidoscope
[difftool]
    prompt = false
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[merge]
    tool = Kaleidoscope
[mergetool]
    prompt = false
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[push]
    default = current
[rebase]
    autosquash = true
[user]
    name = {{ pillar['name'] }}
    email = {{ pillar['email'] }}
